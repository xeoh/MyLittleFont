<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="100%"
        android:background="#bbbbbb">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Curve"/>

        <SeekBar
            android:id="@+id/curveControl"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:progress="50"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Roundness"/>

        <SeekBar
            android:id="@+id/roundnessControl"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:progress="50"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Weight"/>

        <SeekBar
            android:id="@+id/weightControl"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:progress="50"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Width"/>

        <SeekBar
            android:id="@+id/widthControl"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:progress="50"/>

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"/>
    </LinearLayout>

    <EditText
        android:id="@+id/sample_text"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="30%"
        android:hint="Sample Text"
        android:inputType="text"/>

    <kr.ac.kaist.team888.mylittlefont.FontCanvasView
        android:id="@+id/fontCanvas"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="90%"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="10%"
        android:clickable="true"
        android:background="#ffffff"/>

    <RelativeLayout
        app:layout_widthPercent="20%"
        android:layout_height="match_parent"
        app:layout_marginLeftPercent="80%">

        <Switch
            android:id="@+id/viewSkeletonBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Skeleton" />

        <SeekBar
            android:id="@+id/fontSizeControl"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:progress="50"/>

        <TextView
            android:id="@+id/fontSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_above="@id/fontSizeControl"/>
    </RelativeLayout>

</android.support.percent.PercentFrameLayout>